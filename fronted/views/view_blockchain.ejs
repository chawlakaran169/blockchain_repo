<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Blockchain Transfer Ledger | LandChain</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #121212;
      color: #fff;
    }

    h2 {
      color: #0dcaf0;
      text-shadow: 1px 1px 2px #000;
    }

    .table {
      border-radius: 10px;
      overflow: hidden;
    }

    .table thead {
      background-color: #343a40;
      color: #f8f9fa;
    }

    .table-dark {
      background-color: #212529;
    }

    .table-hover tbody tr:hover {
      background-color: #2c3034;
    }

    .badge.bg-info {
      background-color: #0dcaf0;
      color: #000;
      font-size: 0.9rem;
      padding: 0.4em 0.7em;
    }

    td {
      vertical-align: middle;
      word-break: break-word;
    }

    th, td {
      text-align: center;
    }

    .table-responsive {
      border-radius: 8px;
      overflow: hidden;
    }
  </style>
</head>

<body>
  <div class="container my-5">
    <h2 class="text-center mb-4">üóÇÔ∏è Blockchain Transfer Ledger</h2>

    <div class="table-responsive">
      <table class="table table-dark table-striped table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th>Timestamp</th>
            <th>From (UID / Name)</th>
            <th>To (UID / Name)</th>
            <th>Land Info</th>
            <th>Action</th>
            <th>Hash</th>
          </tr>
        </thead>
        <tbody>
          <% blockchain.forEach(block => { %>
            <tr>
              <td><%= block.index %></td>
              <td><%= block.timestamp %></td>
              <td>
                <div><strong>UID:</strong> <%= block.data.from_uid %></div>
                <div><strong>Name:</strong> <%= block.data.from_name %></div>
              </td>
              <td>
                <div><strong>UID:</strong> <%= block.data.to_uid %></div>
                <div><strong>Name:</strong> <%= block.data.to_name %></div>
              </td>
              <td><%= block.data.land %></td>
              <td>
                <span class="badge bg-info text-dark"><%= block.data.action %></span>
              </td>
              <td style="max-width: 200px; word-wrap: break-word;"><%= block.hash %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
