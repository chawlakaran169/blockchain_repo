<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Full Blockchain | LandChain</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #121212;
      color: #fff;
    }

    h2 {
      color: #0dcaf0;
      text-align: center;
      margin-top: 2rem;
      text-shadow: 1px 1px 2px #000;
    }

    .block-card {
      background-color: #212529;
      border: 1px solid #343a40;
      border-radius: 10px;
      padding: 1.5rem;
      margin: 1rem 0;
      box-shadow: 0 0 10px rgba(0,0,0,0.5);
      transition: transform 0.2s;
    }

    .block-card:hover {
      transform: scale(1.02);
    }

    .block-field {
      margin-bottom: 0.5rem;
    }

    .hash {
      font-family: monospace;
      color: #0dcaf0;
      word-break: break-all;
    }

    .label {
      font-weight: bold;
      color: #adb5bd;
    }

    .container {
      max-width: 800px;
      margin-top: 2rem;
    }

  </style>
</head>
<body>
  <div class="container">
    <h2>ðŸ”— Full Blockchain Ledger</h2>

    <% chain.forEach(block => { %>
      <div class="block-card">
        <div class="block-field">
          <span class="label">Index:</span> <%= block.index %>
        </div>
        <div class="block-field">
          <span class="label">Timestamp:</span> <%= block.timestamp %>
        </div>
        <div class="block-field">
          <span class="label">Data:</span>
          <pre class="text-white bg-dark p-2 rounded"><%= JSON.stringify(block.data, null, 2) %></pre>
        </div>
        <div class="block-field">
          <span class="label">Hash:</span>
          <span class="hash">
            <%= block.hash.slice(0, 8) %>...<%= block.hash.slice(-8) %>
          </span>
        </div>
        <div class="block-field">
          <span class="label">Previous Hash:</span>
          <span class="hash">
            <%= block.previousHash.slice(0, 8) %>...<%= block.previousHash.slice(-8) %>
          </span>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>
